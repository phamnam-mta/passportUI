{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": [
        "react-app",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:css-import-order/recommended"
    ],
    "plugins": ["react", "jsx-a11y", "prettier", "css-import-order"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "tabWidth": 4,
                "printWidth": 120
            }
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    },
    "globals": {
        "JSX": true
    }
}
